<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gls.gemini.upms.boot.web.mapper.PermissionInfoMapper">

    <resultMap id="permissionInfoResultMap" type="com.gls.gemini.upms.boot.web.entity.PermissionInfoEntity">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="type_id" property="typeId"/>
        <result column="parent_id" property="parentId"/>
        <result column="sort" property="sort"/>
        <result column="command" property="command"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="version" property="version"/>
        <result column="deleted" property="deleted"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="update_user_id" property="updateUserId"/>
        <result column="create_user_name" property="createUserName"/>
        <result column="update_user_name" property="updateUserName"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <resultMap id="permissionVoMap" type="com.gls.gemini.sdk.core.vo.PermissionVo">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="parent_id" property="parentId"/>
        <result column="command" property="command"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="version" property="version"/>
        <result column="deleted" property="deleted"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="update_user_id" property="updateUserId"/>
        <result column="create_user_name" property="createUserName"/>
        <result column="update_user_name" property="updateUserName"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="type_name" property="type"/>
        <result column="weight" property="weight"/>
    </resultMap>

    <sql id="permissionInfoSql">
        id,code,name,description,type_id,parent_id,sort,command,tenant_id,version,deleted,create_user_id,create_user_name,create_time,update_user_id,update_user_name,update_time
    </sql>
    <select id="listByUserId" resultMap="permissionVoMap">
        select tpi.*,
               tdi.name as type_name,
               tpi.sort as weight
        from t_permission_info tpi
                 left join t_dict_info tdi
                           on tpi.type_id = tdi.id
                               and tpi.deleted = tdi.deleted
                 inner join t_role_permission_rel trpr
                            on tpi.id = trpr.permission_id
                                and tpi.deleted = trpr.deleted
                 inner join t_user_role_rel turr
                            on trpr.role_id = turr.role_id
                                and trpr.deleted = turr.deleted
        where turr.user_id = #{userId}
          and tpi.deleted = 0;
    </select>

</mapper>